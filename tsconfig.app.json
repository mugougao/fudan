{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "ant-design-vue/typings/global.d.ts"
    ],
    // 允许导入非ts文件
    "allowImportingTsExtensions": true,
    // 允许js
    "allowJs": true,
    // 允许any
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": [
    "env.d.ts",
    "types/**/*.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": ["src/**/__tests__/*"]
}
